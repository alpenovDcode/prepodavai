# ===========================================
# PrepodavAI - Development Environment Variables
# ===========================================
# Для production используйте env.production.example
# ===========================================

# ========== DATABASE (PostgreSQL) ==========
POSTGRES_USER=prepodavai
POSTGRES_PASSWORD=prepodavai_dev
POSTGRES_DB=prepodavai
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?schema=public"

# ========== REDIS ==========
# ВАЖНО: Для production используйте сильный пароль!
REDIS_PASSWORD=dev_redis_password_change_in_production
REDIS_URL="redis://:${REDIS_PASSWORD}@localhost:6379"

# ========== JWT AUTHENTICATION ==========
# ВАЖНО: Для production минимум 32 символа!
# Генерация: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="test-jwt-secret-key-for-development-min-32-chars-long"
JWT_EXPIRES_IN=7d

# ========== ADMIN ACCESS ==========
# UUID пользователей-администраторов через запятую
# Получить ID можно из базы данных (таблица app_users)
ADMIN_USER_IDS="a408194b-b7bb-45a1-a138-f599139d33d3"

# ========== WEBHOOK SECURITY ==========
# Для development можно не указывать (будет предупреждение)
# Для production ОБЯЗАТЕЛЬНО указать WEBHOOK_SECRET или WEBHOOK_ALLOWED_IPS
# WEBHOOK_SECRET="dev-webhook-secret-change-in-production"
# WEBHOOK_ALLOWED_IPS="127.0.0.1"

# ========== TELEGRAM ==========
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN_FROM_BOTFATHER"
NEXT_PUBLIC_TELEGRAM_BOT_NAME="your_bot_username"

# ========== API KEYS ==========
OPENAI_API_KEY="your-openai-api-key"
GAMMA_API_KEY="your-gamma-api-key"

# ========== N8N WEBHOOKS ==========
N8N_WEBHOOK_URL="https://prrvauto.ru/webhook"

# ========== SERVER CONFIGURATION ==========
PORT=3001
NODE_ENV=development
CORS_ORIGIN="http://localhost:3000"

# ========== FRONTEND ==========
NEXT_PUBLIC_API_URL="http://localhost:3001"

# ========== OPTIONAL ==========
# BASE_URL="http://localhost:3001"
# WEB_APP_URL="http://localhost:3000"